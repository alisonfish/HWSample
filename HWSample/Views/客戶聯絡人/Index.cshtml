@model IEnumerable<HWSample.ViewModel.ContactIndexViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>客戶聯絡人清單</h1>

<p>
    @Html.ActionLink("Create New", "Create")

    @*@using (Html.BeginForm("Index", "客戶聯絡人", FormMethod.Get))
    {
        <input type="search" name="keyword" placeholder="請輸入欲搜尋聯絡人姓名的關鍵字" value="" />
    }*@
</p>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CellPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.客戶名稱)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            @Html.HiddenFor(model => item.Id)
            <tr>
                <td>
                    @Html.EditorFor(model => item.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.Title, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Email)
                </td>
                <td>
                    @Html.EditorFor(model => item.CellPhone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.CellPhone, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(model => item.Phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.Phone, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.DisplayFor(model => item.Customer.客戶名稱)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
    <button class="btn btn-primary">批次更新</button>
}